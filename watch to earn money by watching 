    <script>
        // User Data Management
        const defaultUserData = {
            withdrawBalance: 0,
            dailyEarnings: 0,
            adsWatched: 0,
            dailyLimit: 20,
            referralsCount: 0,
            referralEarnings: 0,
            level: 1,
            language: 'en',
            lastAdWatch: 0
        };

        let userData = { ...defaultUserData };

        // Monetag Integration
        class MonetogIntegration {
            constructor() {
                this.isLoaded = false;
                this.init();
            }

            init() {
                const checkLoaded = () => {
                    if (typeof window.show_9368336 === 'function') {
                        this.isLoaded = true;
                        console.log('MONETAG: Integration ready');
                        return true;
                    }
                    return false;
                };

                if (checkLoaded()) return;

                const pollInterval = setInterval(() => {
                    if (checkLoaded()) {
                        clearInterval(pollInterval);
                    }
                }, 1000);

                setTimeout(() => {
                    clearInterval(pollInterval);
                    if (!this.isLoaded) {
                        console.warn('Monetag script failed to load');
                    }
                }, 30000);
            }

            async showAd() {
                return new Promise((resolve, reject) => {
                    if (!this.isLoaded || typeof window.show_9368336 !== 'function') {
                        // Fallback for development/testing
                        setTimeout(() => {
                            resolve();
                        }, 2000);
                        return;
                    }

                    try {
                        window.show_9368336();
                        setTimeout(() => {
                            resolve();
         