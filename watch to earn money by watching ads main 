  <script>
    // Initialize balance
    let balance = parseInt(localStorage.getItem('balance')) || 15;
    document.getElementById('balance').innerText = balance;

    // Popup handlers
    function showPopup(title, msg) {
      document.getElementById('popupTitle').innerText = title;
      document.getElementById('popupMsg').innerText = msg;
      document.getElementById('popup').style.display = 'flex';
    }
    function closePopup() {
      document.getElementById('popup').style.display = 'none';
    }

    // Watch Ads logic
    function watchAd() {
      const btn = document.querySelector('.btn-main');
      btn.disabled = true;
      btn.innerText = '‚è≥ Watching Ad...';

      if (typeof show_9368336 !== 'function') {
        alert('üö´ Ad blocker detected or SDK failed to load.');
        btn.disabled = false;
        btn.innerHTML = '<span class="icon">üí∏</span>Watch Ads';
        return;
      }

      show_9368336().then(() => {
        balance += 5;
        localStorage.setItem('balance', balance);
        document.getElementById('balance').innerText = balance;
        alert('üéâ Congrats! You earned 5 sats!');
      }).catch(() => {
        alert('‚ö†Ô∏è Ad skipped or failed. No reward granted.');
      }).finally(() => {
        btn.disabled = false;
        btn.innerHTML = '<span class="icon">üí∏</span>Watch Ads';
      });
    }
  </script>

